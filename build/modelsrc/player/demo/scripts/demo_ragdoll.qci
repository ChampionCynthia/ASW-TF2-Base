	$jointconstrain "bip_head" x limit -30.00 10.00 0.00
	$jointconstrain "bip_head" y limit -45.00 45.00 0.00
	$jointconstrain "bip_head" z limit -30.00 30.00 0.00

	$jointmassbias "bip_hip_r" 0.80
