//================================================================================================
//
// JUMPS
//
//================================================================================================

//secondary jump
$sequence a_jumpStart_secondary secondary_jump frames 0 25 alignto a_reference Z activity ACT_MP_JUMP_START_SECONDARY 1 LX LY
$sequence a_jumpfloat_secondary secondary_jump frames 26 189 loop  fps 30 alignto a_reference activity ACT_MP_JUMP_FLOAT_SECONDARY 1 LX LY
$sequence jumpLandPose_secondary secondary_jump frames 25 25 numframes 30 loop
$sequence jumpLand_secondary { 
	secondary_jump_land 
	subtract jumpLand_secondary 0 
	delta 
	iklock rfoot 1 0 iklock lfoot 1 0 

	activity ACT_MP_JUMP_LAND_SECONDARY 1 
}
//melee jump
$sequence a_jumpStart_melee melee_jump frames 0 37 alignto a_reference Z activity ACT_MP_JUMP_START_melee 1 LX LY
$sequence a_jumpfloat_melee melee_jump frames 38 189	loop  fps 30 alignto a_reference activity ACT_MP_JUMP_FLOAT_melee 1 LX LY
$sequence jumpLandPose_melee melee_jump frames 30 30 numframes 30 loop
$sequence jumpLand_melee { 
	melee_jump_land 
	subtract jumpLand_melee 0 
	delta 
	iklock rfoot 1 0 iklock lfoot 1 0 
	
	activity ACT_MP_JUMP_LAND_melee 1 
}
//pda jump
$sequence a_jumpStart_pda pda_jump frames 0 37 alignto a_reference Z activity ACT_MP_JUMP_START_pda 1 LX LY
$sequence a_jumpfloat_pda pda_jump frames 38 189 loop  fps 30 alignto a_reference activity ACT_MP_JUMP_FLOAT_pda 1 LX LY
$sequence jumpLandPose_pda pda_jump frames 30 30 numframes 30 loop
$sequence jumpLand_pda { 
	pda_jump_land 
	subtract jumpLand_pda 0 
	delta 
	iklock rfoot 1 0 iklock lfoot 1 0 

	activity ACT_MP_JUMP_LAND_PDA 1 
}
//sapper jump
$sequence a_jumpStart_sapper sapper_jump frames 0 37 alignto a_reference Z activity ACT_MP_JUMP_START_Building 1 LX LY
$sequence a_jumpfloat_sapper sapper_jump frames 38 189 loop  fps 30 alignto a_reference activity ACT_MP_JUMP_FLOAT_Building 1 LX LY
$sequence jumpLandPose_sapper sapper_jump frames 30 30 numframes 30 loop
$sequence jumpLand_sapper { 
	sapper_jump_land 
	subtract jumpLand_sapper 0 
	delta 
	iklock rfoot 1 0 iklock lfoot 1 0 

	activity ACT_MP_JUMP_LAND_Building 1 
}

//LOSER jump
$sequence a_jumpStart_LOSER LOSER_jump frames 0 37 alignto a_reference Z activity ACT_MP_JUMP_START_LOSERSTATE 1 LX LY
$sequence a_jumpfloat_LOSER LOSER_jump frames 38 189	loop  fps 30 alignto a_reference activity ACT_MP_JUMP_FLOAT_LOSERSTATE 1 LX LY
$sequence jumpLandPose_LOSER LOSER_jump frames 30 30 numframes 30 loop
$sequence jumpLand_LOSER { 
	LOSER_jump_land 
	subtract jumpLand_LOSER 0 
	delta 
	iklock rfoot 1 0 iklock lfoot 1 0 
	
	activity ACT_MP_JUMP_LAND_LOSERSTATE 1 
}
