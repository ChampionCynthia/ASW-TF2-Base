//================================================================================================
//
// JUMPS
//
//================================================================================================

//primary jump
$sequence a_jumpStart_primary primary_jump frames 0 25 alignto a_reference Z activity ACT_MP_JUMP_START_primary 1 LX LY
$sequence a_jumpfloat_primary primary_jump frames 26 56 loop  fps 30 alignto a_reference Z activity ACT_MP_JUMP_FLOAT_primary 1 LX LY
$sequence jumpLandPose_primary primary_jump frames 25 25 alignto a_reference Z numframes 30 loop
$sequence jumpLand_primary { 
	primary_jumpLand 
	subtract jumpLand_primary 0
  ikrule lhand touch "weapon_bone_1" usesource  
	delta 
	iklock rfoot 1 0 iklock lfoot 1 0 

	activity ACT_MP_JUMP_LAND_primary 1 
}

//secondary jump
$sequence a_jumpStart_secondary secondary_jump frames 0 25 alignto a_reference Z activity ACT_MP_JUMP_START_SECONDARY 1 LX LY
$sequence a_jumpfloat_secondary secondary_jump frames 26 56 loop  fps 30 alignto a_reference activity ACT_MP_JUMP_FLOAT_SECONDARY 1 LX LY
$sequence jumpLandPose_secondary secondary_jump frames 25 25 numframes 30 loop
$sequence jumpLand_secondary { 
	secondary_jump_land 
	subtract jumpLand_secondary 0 
	delta 
	iklock rfoot 1 0 iklock lfoot 1 0 

	activity ACT_MP_JUMP_LAND_SECONDARY 1 
}

//melee jump

$sequence a_jumpStart_melee melee_jump frames 0 25 alignto a_reference Z activity ACT_MP_JUMP_START_melee 1 LX LY
$sequence a_jumpfloat_melee melee_jump frames 26 60 loop  fps 30 alignto a_reference activity ACT_MP_JUMP_FLOAT_melee 1 LX LY
$sequence jumpLandPose_melee melee_jump frames 25 25 numframes 30 loop
$sequence jumpLand_melee { 
	melee_jump_land 
	subtract jumpLand_melee 0 
	delta 
	iklock rfoot 1 0 iklock lfoot 1 0 
	
	activity ACT_MP_JUMP_LAND_melee 1 
}


//build jump

$sequence a_jumpStart_Building Building_jump frames 0 25 alignto a_reference Z activity ACT_MP_JUMP_START_Building 1 LX LY
$sequence a_jumpfloat_Building Building_jump frames 26 56 loop  fps 30 alignto a_reference activity ACT_MP_JUMP_FLOAT_Building 1 LX LY
$sequence jumpLandPose_Building Building_jump frames 25 25 numframes 30 loop
$sequence jumpLand_Building { 
	Building_jump_land 
	subtract jumpLand_Building 0 
	delta
	iklock rfoot 1 0 iklock lfoot 1 0 
	activity ACT_MP_JUMP_LAND_Building 1 
}

//PD jump
$sequence a_jumpStart_PDA PDA_jump frames 0 25 alignto a_reference Z activity ACT_MP_JUMP_START_PDA 1 LX LY
$sequence a_jumpfloat_PDA PDA_jump frames 26 56 loop  fps 30 alignto a_reference activity ACT_MP_JUMP_FLOAT_PDA 1 LX LY
$sequence jumpLandPose_PDA PDA_jump frames 25 25 numframes 30 loop
$sequence jumpLand_PDA { 
	PDA_jump_land 
	subtract stand_PDA 0 
	delta 
	iklock rfoot 1 0 iklock lfoot 1 0 

	activity ACT_MP_JUMP_LAND_PDA 1 
}

//LOSER jump

$sequence a_jumpStart_LOSER LOSER_jump frames 0 25 alignto a_reference Z activity ACT_MP_JUMP_START_LOSERSTATE 1 LX LY
$sequence a_jumpfloat_LOSER LOSER_jump frames 26 60 loop  fps 30 alignto a_reference activity ACT_MP_JUMP_FLOAT_LOSERSTATE 1 LX LY
$sequence jumpLandPose_LOSER LOSER_jump frames 25 25 numframes 30 loop
$sequence jumpLand_LOSER { 
	LOSER_jump_land 
	subtract jumpLand_LOSER 0 
	delta 
	iklock rfoot 1 0 iklock lfoot 1 0 
	
	activity ACT_MP_JUMP_LAND_LOSERSTATE 1 
}

